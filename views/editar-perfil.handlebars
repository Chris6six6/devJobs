<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input value="{{usuario.nombre}}" type="text" name="nombre" placeholder="Tu nombre">
        </div>

        <div class="campo">
            <label>E-mail</label>
            <input value="{{usuario.email}}" type="text" name="email" placeholder="Tu email">
        </div>

        <div class="campo">
            <label>password</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form>
</main>