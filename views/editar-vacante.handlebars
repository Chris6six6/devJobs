<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informacion general</h3>

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React developer" value="{{vacante.titulo}}" required>
        </div>

        <div class="campo">
            <label>Empresa</label>
            <input type="text" value="{{vacante.empresa}}" name="empresa" placeholder="Ej: Empresa contratante" required>
        </div>

        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" value="{{vacante.ubicacion}}" name="ubicacion" placeholder="Ej: Mexico o remoto" required>
        </div>

        <div class="campo">
            <label>Salario</label>
            <input type="text" value="{{vacante.salario}}" name="salario" placeholder="Ej: $600 USD" required>
        </div>

        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo completo">Tiempo completo</option>
                    <option value="Medio tiempo">Medio tiempo</option>
                    <option value="Por proyecto">Por proyecto</option>
                {{/tipoContrato}}
            </select>

        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <input type="hidden" value="{{{vacante.descripcion}}}" id="x" name="descripcion">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="Campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>